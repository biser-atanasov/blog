@model blog.Models.IdentityModels.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "form-horizontal" }))

{
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label col-sm-4" })
            
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-sm-10", @readonly = "readonly" })
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.FullName, new { @class = "control-label col-sm-4" })
                
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control col-sm-10", @readonly = "readonly" })
                
    </div>
            
    <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">

            @Html.ActionLink("Cancel", "List", "User", null, new { @class = "btn btn-default" })

            <input type="submit" value="Delete" class="btn btn-danger" />

        </div>

    </div>

}