@model blog.Models.IdentityModels.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<h2>@ViewBag.Title</h2><br />

@using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })
        <div class="col-sm-5">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "control-label col-sm-4" })
        <div class="col-sm-5">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
            @Html.ActionLink("Cancel", "List", "User", null, new { @class = "btn btn-default" })
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
}