@model List<blog.Models.IdentityModels.ApplicationUser>

@{
    ViewBag.Title = "List";
}

<h2>Users</h2>

<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)

        {
            if (ViewBag.Admins.Contains(user.UserName))

            {
                @:<tr class="info">
            }
            else
            {
            @:<tr>
            }

            <td>@user.Id</td>
            <td>@user.FullName</td>
            <td>@user.Email</td>

            <td>
                @Html.ActionLink("Edit", "Edit", "User", null, new { @id = user.Id, @class = "btn btn-success btn-xs" })
                |
                @Html.ActionLink("Delete", "Delete", "User", null, new { @id = user.Id, @class = "btn btn-danger btn-xs" })
            </td> 
        }
    </tbody>
</table>
